{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build hanoi",      // 任务名字
            "type": "shell",              // 走终端 shell
            "command": "g++",             // 用 g++ 编译
            "args": [
                "Hanoi.cpp",
                "function.cpp",
                "-o",
                "Hanoi.exe"
            ],
            "problemMatcher": ["$gcc"],   // 错误提示匹配器
            "group": {
                "kind": "build",
                "isDefault": true          // 默认build任务，Ctrl+Shift+B可以直接触发
            }
        }
    ]
}
